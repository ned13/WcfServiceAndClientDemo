<Window x:Class="WcfWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WcfWpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="op1" HorizontalAlignment="Left" Height="23" Margin="26,84,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="op2" HorizontalAlignment="Left" Height="23" Margin="321,84,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="operatorComboBox" HorizontalAlignment="Left" Margin="172,84,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ListBoxItem Content="+"/>
            <ListBoxItem Content="-"/>
            <ListBoxItem Content="*"/>
            <ListBoxItem Content="/"/>
        </ComboBox>
        <Button x:Name="button" Content="Calculate!!!" HorizontalAlignment="Left" Margin="109,156,0,0" VerticalAlignment="Top" Width="264" Click="button_Click"/>

    </Grid>
</Window>
